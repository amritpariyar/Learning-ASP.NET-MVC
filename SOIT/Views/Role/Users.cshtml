@model IEnumerable<SOIT.Data.ViewModels.UserWithRolesViewModel>
@{
    ViewBag.Title = "Users";
    int count = 0;
}
<div class="panel panel-default">
    <div class="panel-heading">
        Users
    </div>
    <div class="panel-body">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>S.N</th>
                    <th>UserName</th>
                    <th>Email</th>
                    <th>View Profile</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@item.UserName</td>
                        <td>@item.Email</td>
                        <td>@item.RoleNames</td>
                        <td>
                            <a href="/Role/UserDetail?Id=@item.UserId">View Detail</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
