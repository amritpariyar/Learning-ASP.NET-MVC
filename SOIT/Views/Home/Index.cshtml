	<div class="row">
		<div class="col-md-5 col-md-offset-2">
		<div class="panel panel-info">
			<div class="panel-heading">
				<h4>Customer Information</h4>
			</div>
			<div class="panel-body">
				<div class="col-md-12">
					<div class="col-md-6 box-center">
						<div class="row">
							<label class="control-label">Full Name</label>
							<input type="text" id="fullname" name="FullName" class="form-control">							
						</div>
						<div class="row">
							<label class="control-label">DOB</label>
							<input type="date" id="dob" name="dob" class="form-control">							
						</div>
						<div class="row">
							<label class="control-label">Province</label>
							<select id="province" name="Province" class="form-control">
								<option value="1">Prov. 1</option>
								<option value="2">Prov. 2</option>
								<option value="3">Prov. 3</option>
								<option value="4">Prov. 4</option>
							</select>
						</div>
						<div class="row">
							<label class="control-label">Address</label>
							<input type="text" id="fullname" name="FullName" class="form-control">							
						</div>
						<div class="row">
							<label class="control-label">Gender</label>
							<input type="radio" id="male" name="Gender" checked class="">												
							<label for="male">Male</label>
							<input type="radio" id="female" name="Gender" class="">		
							<label for="female">Female</label>
						</div>
						<div class="row">
							<label class="control-label">Interest</label>
							<input type="checkbox" id="Programming" name="interest">
							<label for="Programming">Programming</label>
							<input type="checkbox" id="Debugging" name="interest">
							<label for="Debugging">Debugging</label>
							<input type="checkbox" id="Testing" name="interest">
							<label for="Testing">Testing</label>
						</div>
						<div class="row">
							<label class="control-label">Detail</label>
							<textarea id="detail" name="detail" class="form-control" placeholder="detail of customer"></textarea>
						</div>
						<div class="row form-group">
							<label class="control-label">Solve this</label>
							
							<input type="number" id="num1" name="num1">Num 1
							<label>+</label>
							
							<input type="number" id="num2" name="num2">Num 2
							
							<input type="number" id="result" name="result">
							<label>= Result</label>
							<div class="resultdiv"></div>
						</div>
						<div class="row">
							<button type="button" id="clickme" name="clickme" class="btn btn-primary btn-sm" onclick="calculate()">Click Me</button>
						</div>
					</div>
				</div>
			</div>			
		</div>
		</div>
		</div>
