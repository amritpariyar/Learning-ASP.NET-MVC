@model IEnumerable<SOIT.Models.Data.UserProfile>
@{
    ViewBag.Title = "Index";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <a href="/UserProfile/Create" class="btn btn-warning btn-sm pull-right"><i class="fa fa-plus"></i> Create</a>
        <h4>User Profile</h4>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Address</th>
                    <th>Phone</th>
                    <th>Gender</th>
                    <th>Photo</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FullName</td>
                        <td>@item.Address</td>
                        <td>@item.Mobile</td>
                        <td>@item.Gender</td>
                        <td><img src="~/UserImage/@item.Photo" height="40" width="40" alt="user photo" /></td>
                        <td>
                            <a href="/UserProfile/Edit?Id=@item.Id">Edit Me</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div> 